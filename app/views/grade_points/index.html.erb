<p id="notice"><%= notice %></p>

<h1>Listing Grade Points</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
    <% @grade_points.each do |grade_point| %>
      <% if grade_point.notice == true %>
        <tr>
          <td><%= grade_point.title %></td>
          <td><%= grade_point.content %></td>
          <td><%= link_to 'Show', grade_point %></td>
          <td><%= link_to 'Edit', edit_post_path(grade_point) %></td>
          <td><%= link_to 'Destroy', grade_point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
  <tbody>
    <% @grade_points.each do |grade_point| %>
      <tr>
        <td><%= grade_point.title %></td>
        <td><%= grade_point.content %></td>
        <td><%= grade_point.user.email %></td>
        <td><%= link_to 'Show', grade_point %></td>
        <td><%= link_to 'Edit', edit_grade_point_path(grade_point) %></td>
        <td><%= link_to 'Destroy', grade_point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

