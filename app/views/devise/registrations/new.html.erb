<%= bootstrap_devise_error_messages! %>
<div class="container">
  <div class="panel panel-default devise-bs col-md-offset-4 col-md-4">
    <div class="panel-heading">
      <h4><%= t('.sign_up', default: 'Sign up') %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :이름 %>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :나이 %>
          <%= f.number_field :age, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :키 %>
            <%= f.number_field :height, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :몸무게 %>
            <%= f.number_field :weight, autofocus: true, class: 'form-control' %>
        </div>
        <div class="btn-group" data-toggle="buttons">
            <p style="margin-bottom:0;"><%= f.label :성별 %></p>
            <label class="radio_button active"> 남자
               <%= f.radio_button :gender, '남자', checked: true %>
            </label>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
      <% end %>
    </div>
    <%= render 'devise/shared/links' %>
  </div>
</div>

