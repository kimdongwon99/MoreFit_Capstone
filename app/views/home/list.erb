

    <div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            <form action="" class="search-form">
                <div class="form-group has-feedback">
            		<label for="search" class="sr-only">Search!</label>
            		<input type="string" name="query" class="form-control" name="search" id="search" placeholder="search">
              		<span class="glyphicon glyphicon-search form-control-feedback"></span>
            	</div>
            </form>
        </div>
    </div>
</div>
    
    <div class="container">
            <h1>게시판</h1>

         <div >
        <table class="table">
            <% @all_post.each do |p| %>
            <tr>
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="thumbnail">
                           <video style="width: 100%; height: 100%;" src="<%=p.image_url %>" >
                    </div>
                    <div class="panel-heading">
                        <a href="/detail/<%= p.id %>" class="portfolio-text"> <%= p.video_title%> </a>
                    </div>
                </div>
              </div>
              </div>
            </tr>
            
  

            <% end %>
        </table>
        <% if current_user.nil? %>
            <div class="col-md-6 col-md-offset-0"><a href="/users/sign_in"><button type="button" class="btn btn-warning">로그인하고 글쓰기 </button></a></div>
        <%else%>
            <div class="col-md-6 col-md-offset-0"><a href="/many"><button type="button" class="btn btn-warning">글쓰기</button></a></div>
        <%end%>
        </div>
    
    
    </div>
    


