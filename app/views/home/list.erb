<div class="container">
 <div >
    <table class="table">
        <% @all_post.each do |p| %>
        <tr>
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="thumbnail" style="max-width: 100%; height: 250px;"> 
                       <img style="width: 100%; height: 100%;" src="<%=p.image_url %>" >
                   </div>
                   <div class="panel-heading">
                    <a href="/detail/<%= p.id %>" class="portfolio-text"> <%= p.video_title%></a>
                    <p><%= p.video_values%></p>
                </div>
            </div>
        </div>
    </div>
</tr>
<% end %>
</table>
