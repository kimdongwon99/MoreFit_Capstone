

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            <form action="" class="search-form">
                <div class="form-group has-feedback">
            		<label for="search" class="sr-only">Search!</label>
            		<input type="string" name="query" class="form-control" name="search" id="search" placeholder="search">
              		<span class="glyphicon glyphicon-search form-control-feedback"></span>
            	</div>
            </form>
        </div>
    </div>
</div>








<div class="container">
  <h1>게시판 목록</h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>제목</th>
        <th>작성자</th>
        <th>작성시간</th>
      </tr>
    </thead>
  
    <tbody>
      <% @postss =@posts.reverse %>
      <% @postss.each do |post| %>
        <tr>
          <td><%= link_to post.title , post %></td>
          <td><%= post.user.name %></td>
          <td><%= post.created_at.in_time_zone("Asia/Seoul").strftime("%Y년%m월%d일 %H시%M분") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <% if current_user.nil? %>
    <div class="col-md-6 col-md-offset-0"><a href="/users/sign_in"><button type="button" class="btn btn-warning">로그인하고 글쓰기 </button></a></div>
  <%else%>
    <div class="col-md-6 col-md-offset-0"><a href="/posts/new"><button type="button" class="btn btn-warning">글쓰기</button></a></div>
  <%end%>


</div>